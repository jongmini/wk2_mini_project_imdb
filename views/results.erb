<%# this is where I show the search results %>



<div class="container">
<table class="table table-hover" border="1">
<tr>
<th>Movie results for <%= "#{@movie_title}" %> </th> 
</tr>
<% @movies["Search"].map do |movie| %>	
<tr>
<td><a class="text-center" href=/movie/<%= movie["imdbID"]%> > 
	<%= "#{movie["Title"]} #{movie["Year"]}" %> 
	</a>
</td>
</tr>

<% end %>
</tbody>

</table>
</div>


