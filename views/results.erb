

<div class="container result row">

	<div>
		<h2>Movie results for '<%="#{@search_str}"%>' </h2>
			<ul class="unstyled">

				<% @movies.map do |movie| %>	
				<li class="lead"><a href=/movie/<%= movie[2]%> > 
					
					<% imdb = imdb_pull(:i,movie[2]) %>
					<img class="img" src=
					<%=  imdb["Poster"]=="N/A" ? "http://memeshare.net/memes/12/11061.png" : imdb["Poster"] %> 
					width="40px" style="vertical-align: bottom;">
				
				<%= "#{movie[0]} (#{movie[1]})"%>
				<% end %>
				</a></li>
			</ul>


	</div>
</div>




