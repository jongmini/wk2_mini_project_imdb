<%# this is where I show more details of the specific movie %>

<div class="container show">

	<h1> Movie Information </h1>
	<ul>
		<li> Title: <a href=http://www.imdb.com//title/<%= @imdb["imdbID"] %>>
			<%= @imdb["Title"] %> </a></li>
		<li> Plot: <%= @imdb["Plot"] %> </li>
		<li> Pleased Year: <%= @imdb["Released"] %> </li>
		<li> Rated: <%= @imdb["Rated"] %> </li>
		<li> Runtime: <%= @imdb["Runtime"] %> </li>
		<li> Genre: <%= @imdb["Genre"] %> </li>
		<li> Director: <%= @imdb["Director"] %> </li>
		<li> Actors: <%= @imdb["Actors"] %> </li>
		<li> Rating: <%= @imdb["imdbRating"] %> 
			<% (@imdb["imdbRating"].to_i.round).times do |x| %>
			<img src=http://findicons.com/files/icons/2156/super_mario/128/star.png height="30px" width="30px">
			<% end %>
		</li><br>
		
	
	<a href=http://www.imdb.com/title/<%= @imdb["imdbID"] %>>
	<img class="img-thumbnail" src=
	<%= (@imdb["Poster"]=="N/A" ? "http://memeshare.net/memes/12/11061.png" : @imdb["Poster"]) %>>
	</a> <br>
	</ul>
	<a href='/'> new search </a>

</div>